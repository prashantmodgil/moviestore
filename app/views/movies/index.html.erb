<div class= "body">
<div class = "container">

		<div class="container-fluid">
			<%=render 'navbar'%>
			<%=render 'slider'%>
			<%=render 'allmovies' %>


			<canvas id="pie-chart" width="800" height="450"></canvas>
			<script>


			<% names =  Array.new %>
			<% vii = Array.new %>
			<% @movie.order('view_count desc').limit(6).each do |m|%>
			<% names.push(m.title) %>
			<% vii.push(m.view_count) %>
			<% end %>

			new Chart(document.getElementById("pie-chart"), {
			    type: 'pie',
			    data: {
			      labels:<%=names%>,
			      datasets: [{
			        label: "top 6 veiws",
			        backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"."#3b56aa"],
			        data:vii
			      }]
			    },
					<
					<%debugger%>
			    options: {
			      title: {
			        display: true,
			        text: 'some of the top movies'
			      }
			    }
			});

			</script>
</div>
</div>
</div>
