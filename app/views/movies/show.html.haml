.container
  .panel.panel-default
    .panel-body
      .container-fluid
        = render 'movies/navbar'
        .row
          .col-md-4
            %img{:src => "#{@movie.image_url}", :style => "height:500px; width:100%"}/
          .col-md-8
            %dl
              %dt.fontstyle
                Title:
              %dd.fonttexts
                #{@movie.title}
              %dt.fontstyle
                Description:
              %dd.fonttexts
                #{@movie.descripton}
              %dt.fontstyle
                Genere:
              %dd.fonttexts
                #{@movie.genere}
              %dt.fontstyle
                Caste:
              %dd.fonttexts
                #{@movie.cast}
              %dt.fontstyle
                Year:
              %dd.fonttexts
                #{@movie.year}
              %dt.fontstyle
                Rating:
              %dd.fonttexts
                #{@movie.rating}
        .row
          .col-md-6
            .panel.panel-default
              .panel-heading
                %h3.panel-title
                  Comments
              - @movie.comments.limit(3).each do |c|
                .panel-body
                  = render partial: "comments/comment", locals: {comment: c}
              .panel-footer
                %h2
                  Add a comment
                = render "comments/form"
        %a.button{:href => "#{movies_path}"} Home
