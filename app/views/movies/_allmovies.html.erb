
<div class="row">
  <h3 class="fontstyle">
				Latest Movies
	</h3>
    <% @movie.order('created_at desc').limit(6).each do |m|%>
     <div class="col-md-4">
       <div class = "image_sh">
        <a href="<%= movie_path(m)%>">
       <img src="<%= m.image_url%>" class='image' alt="<%= m.title %>" width="100%" height="600" >
        </a>
       </div>
     </div>
    <%end%>

</div>

